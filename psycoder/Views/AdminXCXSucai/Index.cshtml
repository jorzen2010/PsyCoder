@model StaticPagedList<psycoderEntity.XCXSucai>
@using PagedList;
@using PagedList.Mvc;
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section Topcss {
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="~/plugins/bootstrap-switch/css/bootstrap-switch.css" rel="stylesheet" type="text/css" />


}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.title 
        </h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            <a class="btn btn-primary btn-sm" href="@Url.Action("Create", "AdminXCXSucai", new { type=ViewBag.type})"><i class="fa fa-plus"></i> 新增 @ViewBag.title</a>
                            <a class="btn btn-default btn-sm" href="@Url.Action("Index", "AdminXCXSucai", new { Ifdel=1})"><i class="fa fa-trash"></i> 回收站</a>
                        </h3>
                        
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="col-sm-1">
                                        序号
                                    </th>
                                    <th class="col-sm-2">
                                        标题
                                    </th>
                                    <th class="col-sm-2">
                                        作者
                                    </th>
                                    <th class="col-sm-3">
                                        提供方
                                    </th>
                                    <th class="col-sm-2">操作</th>
                                    <th class="col-sm-2">查看</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Author)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Provider)
                                        <input type="checkbox" name="Qanxian" value="@item.Id" @(item.Qanxian ? "checked='checked'" : "") />
                                        @Html.AntiForgeryToken()
                                       
                                    <td>
                                        <a class="btn btn-success btn-sm" href="@Url.Action("Edit", "AdminXCXSucai", new { id=item.Id,type=item.type})"><i class="fa fa-pencil"></i> 编辑</a>
                                        <button class="btn btn-info btn-sm" type="button" onclick="DeleteItem('@item.Id','@(item.IfDelete ? "false'" : "true")')"><i class="fa fa-trash"></i> 删除</button>

                                    </td>
                                    <td>
                                        <button class="btn btn-warning btn-sm" ><i class="fa fa-volume-up"></i></button>
                                    </td>

                                </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">

                        <ul class="pagination pagination-sm no-margin pull-right">
                            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page ,type=Request.QueryString["type"]}),
    new PagedListRenderOptions
    {
        LinkToPreviousPageFormat = "上一页",
        LinkToNextPageFormat = "下一页",
        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
        DisplayLinkToLastPage = PagedListDisplayMode.Always,
        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
        DisplayLinkToNextPage = PagedListDisplayMode.Always,
        MaximumPageNumbersToDisplay = 5,
        LinkToFirstPageFormat = "首页",
        LinkToLastPageFormat = "最后一页",
        PageCountAndCurrentLocationFormat = "第 {0}页 共 {1}页"
    })
                        </ul>
                    </div>
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>



@section BottomScripts {
<script type="text/javascript" src="/plugins/bootbox.min.js"></script>
<script type="text/javascript" src="/plugins/bootstrap-switch/js/bootstrap-switch.js"></script>

    <script type="text/javascript">

        function DeleteItem(id, ifdel) {
            var token = $('[name=__RequestVerificationToken]').val();
            $.ajax({
                type: 'POST',
                url: "/AdminXCXSucai/UpdateDelete",
                data: {
                    id: id,
                    __RequestVerificationToken: token,
                    status: ifdel,
                },
                dataType: "json",
                success: function (data) {
                    if (data.MessageStatus)
                    {
                        alertconfirmToUrl(data.MessageInfo, '/AdminXCXSucai/Index?type=@ViewBag.type');
                      //  window.location.href = '/AdminXCXSucai/Index?type=@ViewBag.type'
                    }
                    else
                    {
                        alertconfirm("删除失败！");
                    }

                }
            });

        }


        $(document).ready(function () {


            //开关按钮样式加载
            $('[name="Qanxian"]').bootstrapSwitch({
                onText: "启用",
                offText: "禁用",
                onColor: "success",
                offColor: "danger",
                size: "small",
                onSwitchChange: function (event, state) {
                    var token = $('[name=__RequestVerificationToken]').val();
                    $.ajax({
                        type: 'POST',
                        url: "/AdminXCXSucai/UpdateStatus",
                        data: {
                            id: $(this).val(),
                            status: state,
                            __RequestVerificationToken: token,
                        },
                        dataType: "json",
                        success: function (data) {
                        }
                    });
                }
            });

  


        });

    </script>
}
