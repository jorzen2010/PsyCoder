@model psycoderEntity.Product
@{
    ViewBag.Title = "VIP会员价格设置";
}

@section Topcss {
<link href="~/plugins/bootstrap-validator/css/bootstrapValidator.css" rel="stylesheet" type="text/css" />
}

<div class="content">

        <h3 class="pageTitle">
            @ViewBag.Title
        </h3>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">@ViewBag.Title</h3>
          
        </div>
        <!-- /.box-header -->
        <form class="form-horizontal" action="/Fensi/@ViewBag.acmethod" method="post" name="OrderPriceForm" id="OrderPriceForm">
@*@using (Html.BeginForm("OrderPriceSetting", "Fensi", FormMethod.Post, new { @class = "form-horizontal", @name = "Create", @id = "Create" }))
                    {*@
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @if (ViewBag.acmethod == "EditVIPPrice")
            {
                @Html.HiddenFor(model => model.Id)
            }
            @Html.HiddenFor(model => model.Zixunshi, new { Value = ViewBag.pid })
            <div class="box-body">
                <div class="col-md-12">

                    <div class="form-group">
                        @Html.LabelFor(model => model.ProductName, new { @class = "control-label col-md-2" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ProductName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ProductPrice, new { @class = "control-label col-md-2" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.ProductPrice, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ProductPrice)
                        </div>
                    </div>

                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer clearfix" id="guanggaobtn">
                <a class="btn btn-default" href="@Url.Action("OrderIndex", "Fensi")">返回</a>
                <div class="pull-right">
                    <button type="submit" class="btn btn-primary">保存并发布</button>
                </div>

            </div>
        </form>


</div>
</div>



@section BottomScripts {
<script type="text/javascript" src="~/plugins/bootbox.min.js"></script>
<script type="text/javascript" src="~/plugins/bootstrap-validator/js/bootstrapValidator.js"></script>
}